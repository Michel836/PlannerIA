{
  "model": "default",
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*.key)",
      "Read(./**/*credentials*)",
      "Read(./**/*token*)",
      "Read(./**/*apikey*)"
    ],
    "allow": [
      "Read(./src/**)",
      "Read(./tests/**)",
      "Read(./schema/**)",
      "Read(./config/**)",
      "Write(./src/**)",
      "Write(./tests/**)",
      "Write(./schema/**)",
      "Write(./config/**)"
    ]
  },
  "diff": {
    "apply_mode": "ask"   // toujours demander avant d'écrire
  }
}
